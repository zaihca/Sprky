<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sparky.Page3Animate">
	<ContentPage.Content>
		<Grid x:Name="grid1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" SizeChanged="Handle_SizeChanged" >
			<StackLayout Margin="0,20,0,0" >
				<Label x:Name="lbl" Text="Helloworld"></Label>
				<Image IsVisible="false" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" x:Name="image"  Source="icon.png"/>			
				<Image IsVisible="false" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" x:Name="image2"  Source="icon.png"/>		
				<Button x:Name="btn" Text="Let it go !" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Clicked="Handle_Clicked"></Button>
			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
