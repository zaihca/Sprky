<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="Silver"   xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sparky.Page1Menu">
	<ContentPage.Content>
	<StackLayout  VerticalOptions="Center" HorizontalOptions="CenterAndExpand" >
		<StackLayout>
			<Label Text="be the first and" ></Label>
			<Label Text="Create Animation" FontSize="50"></Label>
			<Entry x:Name="tbRoomName" Placeholder="Animation Name"></Entry>
			<Button BackgroundColor="#2196F3" TextColor="White"  Text="Next" Clicked="NextPage"></Button>
		</StackLayout>
			<StackLayout>
			<Label Text="Or if you have already a firestarter" ></Label>
			<Label Text="Join Animation" FontSize="50"></Label>
			<Button BackgroundColor="#2196F3" TextColor="White"  Text="Next" Clicked="Handle_Clicked"></Button>
		</StackLayout>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
